    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté à  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}
    <nav id="menu" role="navigation" class="g25">
        <div id="menu_lateral">
        </div><!-- #menu_lateral -->

        <div id="post_navigation">
            <div id="direct" class="pave">
                <h2 class="decale"><span class="intitule">En 1 clic</span></h2>
                <div class="contenu_pave">
                    <ul class="tablo">
                        <li class="case"><a href="/"> <span class="picto"><img src="../../public/assets/img/arton114-edb70.png" alt="" /></span><span class="intitule">Annuaires</span></a></li>
                        <li class="case"><a href="/"> <span class="picto"><img src="../../public/assets/img/arton115-d93ea.png" alt="" /></span><span class="intitule">Plan de la commune</span></a></li>
                        <li class="case"><a href="agenda"> <span class="picto"><img src="../../public/assets/img/arton116-b8d82.png" alt="" /></span><span class="intitule">Agenda</span></a></li>
                    </ul>
                </div><!-- .contenu_pave -->
            </div><!-- .pave -->
            <div id="boutons_pratique" class="pave">
                <h2 class="decale"><span class="intitule">Pratique</span></h2>
                <div class="contenu_pave"><a href="/"><img class="spip_logos" alt='D&#233;marches en ligne' src="../../public/assets/img/arton221.png?1448546671" width="480" height="120" onmouseover="this.src='../../public/assets/img/artoff221.png?1448546738'" onmouseout="this.src='../../public/assets/img/arton221.png?1448546671'" /></a>
                    <br/>
                    <figure class='spip_document_1105 spip_documents media media_image media_image_png'><a href="https://portail5.aiga.fr/index.php5?client=10340" title="https://portail5.aiga.fr/index.php5..."><img src="../../public/assets/img/portailfamille.png" height="235" width="264" alt='Acc&#232;s au portail famille' /></a></figure>
